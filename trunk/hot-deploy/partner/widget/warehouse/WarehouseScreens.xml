<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/widget-screen.xsd">
	<screen name="header1">
    	<section>
      		<widgets>
        		<platform-specific><html>
          			<html-template location="component://partner/webapp/common/home/header1.ftl"/>
          		</html></platform-specific>
          	</widgets>
    	</section>
	</screen>
	<screen name="header2">
    	<section>
      		<widgets>
        		<platform-specific><html>
          			<html-template location="component://partner/webapp/common/home/header2.ftl"/>
          		</html></platform-specific>
          	</widgets>
    	</section>
	</screen>
	<screen name="homebody">
    	<section>
      		<widgets>
        		<platform-specific><html>
          			<html-template location="component://partner/webapp/common/home/body.ftl"/>
          		</html></platform-specific>
          	</widgets>
    	</section>
	</screen>
	<screen name="footer">
    	<section>
      		<widgets>
        		<platform-specific><html>
          			<html-template location="component://partner/webapp/common/home/footer.ftl"/>
          		</html></platform-specific>
          	</widgets>
    	</section>
	</screen>
    <screen name="main">
	    <section>
	    	<widgets>
	      		<decorator-screen name="xhtml-decorator">
	      			<decorator-section name="title">
		        		<label text="仓库管理系统" />
		        	</decorator-section>
		        	<decorator-section name="body">
		        		<include-screen name="homebody"/>
		        	</decorator-section>
		    	</decorator-screen>
	    	</widgets>
	    </section>
	</screen>
	<screen name="xhtml-decorator">
    	<section>
	         <widgets>
	             <include-screen name="header1" />
	             <decorator-section-include name="title" />
	             <include-screen name="header2" />
	             <decorator-section-include name="body" />
	             <include-screen name="footer" />
	         </widgets>
	    </section>
	</screen>
	<screen name="formPage">
	    <section>
	    	<widgets>
	      		<decorator-screen name="xhtml-decorator">
	      			<decorator-section name="title">
		        		<label text="新增订单" />
		        	</decorator-section>
		        	<decorator-section name="body">
		        		<include-screen name="form"/>
		        	</decorator-section>
		    	</decorator-screen>
	    	</widgets>
	    </section>
	</screen>
	<screen name="form">
		<section>
      		<widgets>
        		<platform-specific><html>
          			<html-template location="component://partner/webapp/common/home/testForm.ftl"/>
          		</html></platform-specific>
          	</widgets>
    	</section>
	</screen>
	
	<screen name="PurchaseOrdersEdit">
	    <section>
	    	<widgets>
	      		<decorator-screen name="xhtml-decorator">
	      			<decorator-section name="title">
		        		<label text="新增订单" />
		        	</decorator-section>
		        	<decorator-section name="body">
		        		<include-screen name="PurchaseOrdersEditForm"/>
		        	</decorator-section>
		    	</decorator-screen>
	    	</widgets>
	    </section>
	</screen>
	
	<screen name="PurchaseOrdersEditForm">
		<section>
      		<widgets>
        		<platform-specific><html>
          			<html-template location="component://partner/webapp/common/home/PurchaseOrdersEdit.ftl"/>
          		</html></platform-specific>
          	</widgets>
    	</section>
	</screen>
</screens>