<?xml version="1.0" encoding="UTF-8" ?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://www.ofbiz.org/dtds/site-conf.xsd">
	<include location="component://common/webcommon/WEB-INF/common-controller.xml"/>
    <description>SCM Controller</description>
    <handler name="java" type="request" class="org.ofbiz.webapp.event.JavaEventHandler"/>
    
    <!-- Request Mappings -->
	<request-map uri="checkLogin">
    	<security auth="false" />
        <event type="java" path="org.ofbiz.partner.scm.security.SecurityEvents" invoke="checkLogin"/>
        <response name="success" type="none" />
    </request-map>
    <request-map uri="getTreeRootData">
    	<security auth="false" />
        <event type="java" path="org.ofbiz.partner.scm.security.SecurityEvents" invoke="getTreeRootData"/>
        <response name="success" type="none" />
    </request-map>
    <request-map uri="getTreeDataByParentId">
    	<security auth="false" />
        <event type="java" path="org.ofbiz.partner.scm.security.SecurityEvents" invoke="getTreeDataByParentId"/>
        <response name="success" type="none" />
    </request-map>
    
    <request-map uri="requestJsonData">
           <security https="false" auth="false"/>
           <event type="java" path="org.ofbiz.partner.scm.common.EntityCRUDEvent" invoke="getColl2Json"/>
           <response name="success" type="none"/>
       </request-map>
       <request-map uri="requestTreeJsonData">
           <security https="false" auth="false"/>
           <event type="java" path="org.ofbiz.partner.scm.common.EntityCRUDEvent" invoke="getTree2Json"/>
           <response name="success" type="none"/>
       </request-map>
       <request-map uri="updateJsonData">
           <security https="false" auth="false"/>
           <event type="java" path="org.ofbiz.partner.scm.common.EntityCRUDEvent" invoke="updateFromJson"/>
           <response name="success" type="none"/>
       </request-map>
       <request-map uri="addnewJsonData">
           <security https="false" auth="false"/>
           <event type="java" path="org.ofbiz.partner.scm.common.EntityCRUDEvent" invoke="addnewFromJson"/>
           <response name="success" type="none"/>
       </request-map>
       <request-map uri="deleteJsonData">
           <security https="false" auth="false"/>
           <event type="java" path="org.ofbiz.partner.scm.common.EntityCRUDEvent" invoke="deleteFromJson"/>
           <response name="success" type="none"/>
       </request-map>
       <request-map uri="createWithEntry">
           <security https="false" auth="false"/>
           <event type="java" path="org.ofbiz.partner.scm.common.MultiEntryCRUDEvent" invoke="createEnityWithEntry"/>
           <response name="success" type="none"/>
       </request-map>
       <request-map uri="updateWithEntry">
           <security https="false" auth="false"/>
           <event type="java" path="org.ofbiz.partner.scm.common.MultiEntryCRUDEvent" invoke="updateEnityWithEntry"/>
           <response name="success" type="none"/>
       </request-map>
       <request-map uri="deleteWithEntry">
           <security https="false" auth="false"/>
           <event type="java" path="org.ofbiz.partner.scm.common.MultiEntryCRUDEvent" invoke="deleteEnityWithEntry"/>
           <response name="success" type="none"/>
       </request-map>
    <!-- end of request mappings -->
    
    <!-- View Mappings -->
    	
    <!-- end of View Mappings -->
</site-conf>