<entitymodel xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/entitymodel.xsd">
  <!-- ========================================================= -->
  <!-- ======================== Defaults ======================= -->
  <!-- ========================================================= -->
    <title>Entity of an Open For Business Project Component</title>
    <description>None</description>
    <copyright>Copyright 2001-2009 The Apache Software Foundation</copyright>
    <author>None</author>
    <version>1.0</version>

    <!-- 表头 -->
    <entity entity-name="${TemplateName}"
            package-name="org.ofbiz.scm.${TemplateName}"
            title="${TemplateName} Entity">
      <field name="id" type="id-long"></field>
      <field name="number" type="name"></field>
      <field name="bizDate" type="date-time"></field>
      <field name="note" type="description"></field>
      <prim-key field="id"/>
    </entity>
    
    <!-- 分录 -->
    <entity entity-name="${TemplateName}Entry"
            package-name="org.ofbiz.scm.${TemplateName}"
            title="${TemplateName}Entry Entity">
      <field name="id" type="id-long"></field>
      <field name="parentId" type="id-long"></field>
      <prim-key field="id"/>
    </entity>
   
   <!-- 表头视图 -->
    <view-entity entity-name="${TemplateName}View"
            package-name="org.ofbiz.scm.${TemplateName}"
            title="${TemplateName}View  Entity">
      		<member-entity entity-alias="${TemplateName}V" entity-name="${TemplateName}"></member-entity>
      		
            <alias-all entity-alias="${TemplateName}V" ></alias-all>
    </view-entity>
	<!--表体视图  -->
    <view-entity entity-name="${TemplateName}EntryView"
            package-name="org.ofbiz.scm.${TemplateName}"
            title="${TemplateName}EntryView  Entity">
            <member-entity entity-alias="${TemplateName}EntryV" entity-name="${TemplateName}Entry"></member-entity>
            <alias-all entity-alias="${TemplateName}EntryV" ></alias-all>
            <!-- 实例代码
            <member-entity entity-alias="TEntryMaterialV" entity-name="TMaterial"></member-entity>
            <member-entity entity-alias="UnitV" entity-name="Unit"></member-entity>  
			<alias-all entity-alias="MaterialBomEntryV" ></alias-all>
			<alias name="entryMaterialName" entity-alias="TEntryMaterialV" field="name"></alias>	
			<alias name="entryUnitName" entity-alias="UnitV" field="name"></alias>
			

			<view-link entity-alias="MaterialBomEntryV" rel-entity-alias="TEntryMaterialV" rel-optional="true">
				<key-map field-name="entryMaterialId" rel-field-name="id"/>
			</view-link>
			<view-link entity-alias="MaterialBomEntryV" rel-entity-alias="UnitV" rel-optional="true">
				<key-map field-name="entryUnitId" rel-field-name="id"/>
			</view-link>
			 -->
    </view-entity>
    <!-- 列表界面视图 关联表头和分录-->
    <view-entity entity-name="${TemplateName}ListView"
            package-name="org.ofbiz.scm.basedata"
            title="${TemplateName}ListView  Entity">
      		<member-entity entity-alias="${TemplateName}V" entity-name="${TemplateName}"></member-entity>
            <member-entity entity-alias="${TemplateName}EntryV" entity-name="${TemplateName}Entry"></member-entity>

			<alias name="id" entity-alias="${TemplateName}V" field="id"></alias>
			<alias name="number" entity-alias="${TemplateName}V" field="number"></alias>
			<alias name="bizDate" entity-alias="${TemplateName}V" field="bizDate"></alias>
			<alias name="entryId" entity-alias="${TemplateName}EntryV" field="id"></alias>
			
		
			<view-link entity-alias="${TemplateName}V" rel-entity-alias="${TemplateName}EntryV" rel-optional="true">
				<key-map field-name="id" rel-field-name="parentId"/>
			</view-link>
			
    </view-entity>
     
</entitymodel>
    