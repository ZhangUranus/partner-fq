      <field name="parentId" type="id-long"></field>
            <!-- \n -->
	  <field name="materialMaterialId" type="id-long"></field>
	  	        <!-- \n -->
	  <field name="amount" type="floating-point"></field>
	  	        <!-- \n -->
	  <field name="unitUnitId" type="id-long"></field>
	  	        <!-- \n -->
	  <field name="price" type="floating-point"></field>
	  	        <!-- \n -->
	  <field name="refPrice" type="floating-point"></field>
	  	        <!-- \n -->
	  <field name="account" type="floating-point"></field>
	  	   <!-- \n -->
      <prim-key field="id"/>
    </entity>
   
