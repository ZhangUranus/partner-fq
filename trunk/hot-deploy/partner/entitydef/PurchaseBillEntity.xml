    <!-- 表头 -->
    <entity entity-name="PurchaseBill"
            package-name="org.ofbiz.scm.PurchaseBill"
            title="PurchaseBill Entity">
      <field name="id" type="id-long"></field>
      <field name="number" type="name"></field>
      <field name="bizDate" type="date-time"></field>
            		<!-- \n -->
	  <field name="supplierSupplierId" type="id-long"></field>
				        		<!-- \n -->
	  <field name="purchserTSystemUserId" type="id-long"></field>
				        		<!-- \n -->
	  <field name="auditerTSystemUserId" type="id-long"></field>
				        		<!-- \n -->
	  <field name="totolAccount" type="floating-point"></field>
				   <!-- \n -->
      <field name="note" type="description"></field>
      <field name="status" type="numeric"></field>
      <field name="createdStamp" type="date-time"></field>
      <field name="lastUpdatedStamp" type="date-time"></field>
      <prim-key field="id"/>
    </entity>
    
    <!-- 分录 -->
    <entity entity-name="PurchaseBillEntry"
            package-name="org.ofbiz.scm.PurchaseBill"
            title="PurchaseBillEntry Entity">
