<entitymodel xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/entitymodel.xsd">
  <!-- ========================================================= -->
  <!-- ======================== Defaults ======================= -->
  <!-- ========================================================= -->
    <title>Entity of monthly settle module of  partner scm </title>
    <description>None</description>
    <copyright>Copyright 2011-2012 The Partner</copyright>
    <author></author>
    <version>1.0</version>

    <!-- 系统参数表 -->
    <entity entity-name="PriceMgrParamters"
            package-name="org.ofbiz.scm.pricemgr"
            title="PriceMgrParamters Entity">
      <field name="id" type="id-long"></field>
      <field name="number" type="name"></field>
      <field name="name" type="name"></field>
      <field name="value" type="value"></field>
      <field name="note" type="value"></field>
      <prim-key field="id" />
    </entity>
    
    <!-- 历史存货余额表 -->
    <entity entity-name="HisMaterialBalance"
            package-name="org.ofbiz.scm.pricemgr"
            title="HisMaterialBalance Entity">
      <field name="id" type="id-long"></field>
      <field name="year" type="int"></field>
      <field name="month" type="int"></field>
      <field name="warehouseId" type="id-long"></field>
      <field name="materialId" type="id-long"></field>
      <field name="beginvolume" type="floating-point"></field>
      <field name="beginsum" type="floating-point"></field>
      <field name="endvolume" type="floating-point"></field>
      <field name="endsum" type="floating-point"></field>
      <prim-key field="id" />
    </entity>
    <!-- 当前存货余额表 -->
    <entity entity-name="CurMaterialBalance"
            package-name="org.ofbiz.scm.pricemgr"
            title="CurMaterialBalance Entity">
      <field name="id" type="id-long"></field>
      <field name="year" type="int"></field>
      <field name="month" type="int"></field>
      <field name="warehouseId" type="id-long"></field>
      <field name="materialId" type="id-long"></field>
      <field name="beginvolume" type="floating-point"></field>
      <field name="beginsum" type="floating-point"></field>
      <field name="volume" type="floating-point"></field>
      <field name="totalSum" type="floating-point"></field>
      <prim-key field="id" />
    </entity>
    <!-- 委外入库退料，加工商、物料加权单价表-->
    <entity entity-name="ConsignPrice"
            package-name="org.ofbiz.scm.pricemgr"
            title="ConsignPrice Entity">
      <field name="supplierId" type="id-long"></field>
      <field name="materialId" type="id-long"></field>
      <field name="volume" type="floating-point"></field>
      <field name="totalsum" type="floating-point"></field>
      <prim-key field="supplierId" />
      <prim-key field="materialId" />
    </entity>
    
    <!-- 车间入库退料，车间、物料加权单价表-->
    <entity entity-name="WorkshopPrice"
            package-name="org.ofbiz.scm.pricemgr"
            title="WorkshopPrice Entity">
      <field name="workshopId" type="id-long"></field>
      <field name="materialId" type="id-long"></field>
      <field name="volume" type="floating-point"></field>
      <field name="totalsum" type="floating-point"></field>
      <prim-key field="workshopId" />
      <prim-key field="materialId" />
    </entity>
   
       
    <!-- 成品出库退货，客户、物料加权单价表-->
    <entity entity-name="ProductPrice"
            package-name="org.ofbiz.scm.pricemgr"
            title="ConsignPrice Entity">
      <field name="customerId" type="id-long"></field>
      <field name="materialId" type="id-long"></field>
      <field name="volume" type="floating-point"></field>
      <field name="totalsum" type="floating-point"></field>
      <prim-key field="customerId" />
      <prim-key field="materialId" />
    </entity>
</entitymodel>
    