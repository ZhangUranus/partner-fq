<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
<screen name="billEntry1">
	<section>
		<widgets>
			<include-form name="BaseBillEntryEdit" location="component://practice/widget/BaseBill.xml"/>
            <include-form name="BaseBillEntry" location="component://practice/widget/BaseBill.xml"/>
		</widgets>
	</section>

</screen>

	<screen name="main">
		<section>
			<actions>

			</actions>
			<widgets>
				<decorator-screen name="CommonPracticeDecorator"
					location="component://practice/widget/CommonScreens.xml">
					<decorator-section name="pre-body">
						<container>
							<include-menu location="component://practice/widget/BaseBillMenus.xml"
								name="EditUIMenu" />
						</container>

					</decorator-section>
					<decorator-section name="body">
						<container>
							<screenlet title="基础单据">
								<include-form name="BaseBillHead"
									location="component://practice/widget/BaseBill.xml" />
							</screenlet>
						</container>
						<container id="AjaxEntry">
							<screenlet title="分录">
								<include-screen name="billEntry1" />
							</screenlet>
						</container>

					</decorator-section>
				</decorator-screen>

			</widgets>
		</section>
	</screen>
    
    
    
    <screen name="person">
        <section>
            <actions>
                <script location="component://practice/webapp/practice/WEB-INF/actions/Person.groovy"/>
            </actions>
            <widgets>
                        <platform-specific>
                            <html>
                                <html-template location="component://practice/webapp/practice/res/Person.ftl"/>
                            </html>
                        </platform-specific>
                          
            </widgets>
        </section>
    </screen>
    <screen name="personForm">
        <section>
            <actions>
                <set field="headerItem" value="personForm"/>
                <set field="titleProperty" value="PageTitlePracticePersonForm"/>
                <entity-condition entity-name="Person" list="persons"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <label text="Person List" style="h2"/>
                        <include-form name="ListPersons" location="component://practice/widget/PracticeForms.xml"></include-form>
                    </decorator-section>
                </decorator-screen>       
            </widgets>
        </section>
</screen>
    
    
</screens>
